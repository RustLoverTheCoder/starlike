                    <div class="text-3xl">{ship.en}</div>
                    <div class="text-4xl">{ship.name}</div>
                  </div>
                </div>
                <div class="absolute bottom-10 left-[30%] -right-[50%] z-50 text-sm opacity-0 group-hover:opacity-100 transition-all duration-300">
                  {ship.info}
                </div>
                <div class="absolute left-2 right-2 bottom-5 z-20 flex justify-center">
                  <div class="w-0 group-hover:w-full h-0.5 bg-[#a38352] transition-all duration-500 origin-center" />
                </div>
              </div>
              <img
                src="/images/ship/item_bg_active.jpg"
                alt=""
                class="absolute left-0 right-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
