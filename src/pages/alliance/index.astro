---
import "@styles/global.css";
const alliances = [
  {
    name: "selene",
    name_cn: "赛琳娜之耀",
    name_en: "THE GLORY OF SELENE",
  },
  {
    name: "empire",
    name_cn: "沙顿穆恩帝国",
    name_en: "SHATON MOUN EMPIRE",
  },
  {
    name: "cpgu",
    name_cn: "一体汉和",
    name_en: "CPGU",
  },
  {
    name: "moutainpass",
    name_cn: "芒廷帕斯联合会",
    name_en: "MOUTAINPASS FEDERATION",
  },
  {
    name: "federation",
    name_cn: "圣瞳会",
    name_en: "FEDERATION",
  },
];
---

<html lang="zh-Hans-CN">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>偌星 ｜ Starlike</title>
  </head>
  <body>
    <div class="w-full h-full relative">
      <div id="hy-alliance" class="w-full h-full relative">
        <div class="hy-alliance-container w-full h-full relative">
          {
            alliances.map((alliance) => {
              return (
                <div class="hy-alliance-item relative inline-block w-1/5 h-full text-white shadow-[0_0_0_#fff] group">
                  <div
                    class={`w-full h-full bg-no-repeat bg-cover bg-bottom`}
                    style={{
                      backgroundImage: `url(/images/alliance/${alliance.name}_bg.webp)`,
                    }}
                  />
                  <div
                    class={`absolute top-0 left-0 right-0 bottom-0 bg-no-repeat bg-cover bg-bottom opacity-0 group-hover:opacity-100 transition-opacity duration-400`}
                    style={{
                      backgroundImage: `url(/images/alliance/${alliance.name}_bg_active.webp)`,
                    }}
                  />
                  <div class="hy-info">
                    <div class="hy-icon" />
                    <div class="hy-name">
                      <div class="hy-name_cn">{alliance.name_cn}</div>
                      <div class="hy-name_en">{alliance.name_en}</div>
                    </div>
                    <div class="hy-more">
                      <div class="hy-more-inner" />
                    </div>
                  </div>
                </div>
              );
            })
          }
        </div>
      </div>
    </div>
  </body>
</html>
